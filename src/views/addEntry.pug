doctype html
html
  head
    title The Library App
    link(rel="stylesheet", type="text/css", href="css/style2.css")
  body
  #header
    ul.nav
      li
        a(href="index.pug")
          img.logo(src="images/logo.jpg")        
      li
        a(href="index.pug") Home
